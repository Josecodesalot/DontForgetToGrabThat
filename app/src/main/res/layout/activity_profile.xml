<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    android:background="@color/colorPrimary">


    <fragment
        android:id="@+id/topTitleFragment"
        android:name="com.example.dontforgettograbthat.CommonFragments.TopTitleFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topTitleFragment"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="40dp">


        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="Username" />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"

            android:textAlignment="center"
            android:text="Email" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="FamilyName"
            android:inputType="text"
            android:textAllCaps="false"
            android:fontFamily="@font/asap_medium"
            android:textColor="@color/gwhite"/>

        <Button
            android:id="@+id/btnSetParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/background_rounded_gwhite"
            android:fontFamily="@font/asap_medium"
            android:text="add parent"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignout"
            android:layout_marginTop="25dp"
            android:text="signout"
            android:fontFamily="@font/asap_medium"
            android:background="@drawable/background_rounded_gwhite"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRequests"
            android:layout_marginTop="25dp"
            android:text="Requests"
            android:fontFamily="@font/asap_medium"
            android:background="@drawable/background_rounded_gwhite"/>

    </LinearLayout>


</RelativeLayout>