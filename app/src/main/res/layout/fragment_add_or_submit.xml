<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/relLayout1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you the shopper?"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textSize="@dimen/Header"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout2"
        android:layout_below="@+id/relLayout1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to your List"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:id="@+id/tvAddToYourList"
            android:background="@drawable/grey_border_topandbottom"
            android:layout_marginTop="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Someone else add This"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/Title"
            android:layout_below="@+id/tvAddToYourList"
            android:id="@+id/tvRequest"
            android:layout_marginTop="40dp"/>

        <TextView

            android:id="@+id/tvFamilyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRequest"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="FamilyName"
            android:maxLines="3"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/Title"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubmit"
            android:layout_below="@id/tvFamilyName"
            android:layout_centerHorizontal="true"
            android:text="@string/submit"
            android:background="@drawable/grey_border_topandbottom"/>




    </RelativeLayout>

</RelativeLayout>