<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorprimarydark"
    android:padding="10dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemName"
            android:textColor="@color/gwhite"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:text="ItemName"/>

        <TextView
            android:id="@+id/tvListName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/gwhite"
            android:layout_below="@+id/tvItemName"
            android:text="Walmart"
            android:textSize="18dp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/gwhite"
            android:layout_below="@+id/tvListName"
            android:id="@+id/tvtheprice"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:text="$3.99"/>


        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvtheprice"
            android:id="@+id/btnAccept"
            android:text="Restore"/>

        <Button
            android:id="@+id/btnDeleteFromList"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnAccept"
            android:text="delete record" />

</RelativeLayout>